{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:node/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "c:/users/wojci/webstormprojects/social-system-for-organizing-rides/server/tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint",
    "node"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "node/no-unpublished-import": [
      "error",
      {
        "allowModules": [
          "@faker-js/faker"
        ]
      }
    ],
    "node/no-unsupported-features/es-syntax": "off",
    "node/no-missing-import": "off"
  },
  "overrides": [
    {
      "files": [
        "*.js"
      ],
      "rules": {
        "node/no-missing-import": [
          "error",
          {
            "tryExtensions": [
              ".js"
            ]
          }
        ]
      }
    }
  ]
}
